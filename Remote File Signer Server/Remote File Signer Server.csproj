    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Remote_File_Signer_Server</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Remote File Signer.Shared">
      <HintPath>..\Remote File Signer.Shared\bin\Release\netstandard2.0\publish\Remote File Signer.Shared.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="server.pfx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
